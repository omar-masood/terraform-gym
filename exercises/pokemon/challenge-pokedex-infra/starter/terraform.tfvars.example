# Challenge: Pokedex Infrastructure
# Example Terraform Variables File
#
# Copy this file to terraform.tfvars and customize for your team!
# cp terraform.tfvars.example terraform.tfvars

# ============================================================================
# YOUR TRAINER INFO
# ============================================================================

student_name = "your-name-here" # Replace with your name!

# ============================================================================
# YOUR POKEMON TEAM
# ============================================================================

# Define your Pokemon team (1-6 Pokemon)
# Each Pokemon needs: name (lowercase) and id (1-1010)
#
# Find Pokemon IDs at: https://pokeapi.co/
# Or use these quick references:
#   1: bulbasaur    4: charmander    7: squirtle
#  25: pikachu     39: jigglypuff   52: meowth
#  94: gengar     130: gyarados    143: snorlax
# 149: dragonite  150: mewtwo      151: mew

pokemon_team = [
  { name = "bulbasaur", id = 1 },
  { name = "charmander", id = 4 },
  { name = "squirtle", id = 7 },
  { name = "pikachu", id = 25 },
  # Add more Pokemon here (up to 6 total)
]

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# Choose your deployment path:
# - "docker": Run locally with Docker (no AWS needed)
# - "ec2": Deploy to AWS EC2 (requires AWS credentials)
deployment_path = "docker"

# EC2 Configuration (only if deployment_path = "ec2")
# aws_region    = "us-east-1"
# instance_type = "t3.micro"

# Docker Configuration (only if deployment_path = "docker")
# docker_image = "nginx:alpine"

# ============================================================================
# OPTIONAL SETTINGS
# ============================================================================

environment   = "pokemon-gym"
auto_teardown = "2h"

