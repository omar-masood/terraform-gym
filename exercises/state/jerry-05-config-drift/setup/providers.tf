terraform {
  required_version = ">= 1.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
    random = {
      source  = "hashicorp/random"
      version = "~> 3.0"
    }
  }
}

provider "aws" {
  region = var.aws_region

  default_tags {
    tags = {
      Environment = "terraform-gym"
      Exercise    = "jerry-05-config-drift"
      ManagedBy   = "terraform"
      Student     = var.student_name
    }
  }
}
